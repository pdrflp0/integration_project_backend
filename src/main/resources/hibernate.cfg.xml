<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/integration_project_bd</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">87307944</property>

        <property name="dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <property name="format_sql">true</property>

        <mapping class="br.eletra.backend.entity.LineEntity"/>
        <mapping class="br.eletra.backend.entity.CategoryEntity"/>
        <mapping class="br.eletra.backend.entity.ModelEntity"/>
    </session-factory>
</hibernate-configuration>
